{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=petit_shop;Username=your_postgres_username;Password=your_postgres_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your_super_secret_jwt_key_at_least_32_characters_long_here",
    "Issuer": "PetitShopAPI",
    "Audience": "PetitShopClient",
    "ExpiryMinutes": 1440
  },
  "Smtp": {
    "Enabled": "true",
    "Host": "smtp.gmail.com",
    "Port": "587",
    "EnableSsl": "true",
    "User": "your_email@gmail.com",
    "Pass": "your_gmail_app_password",
    "From": "your_email@gmail.com"
  },
  "EmailService": {
    "BaseUrl": "http://localhost:4000/api/email"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174"
    ]
  }
}
